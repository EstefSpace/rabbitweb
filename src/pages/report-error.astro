---
import LayoutSimple from "../layouts/LayoutSimple.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

---

<LayoutSimple Title="Reporta un error | Rabbit Web"> 
    <Header></Header>


    <dialog>
        <article>
          <h2>Realiza tu reporte</h2>
          <p>
           Gracias por considerar reportar este error, ya sea del bot de discord o de la pagina.
          </p>
          <label for="error">Error</label>
          <input id="error" type="text" placeholder="ej: Me da un error con el comando /util wiki" name="error" maxlength="20">
          <label for="user">Tu usuario de discord</label>
          <input id="user" type="text" placeholder="ej: pepitoCrack" name="user" maxlength="25">
          <label for="message">Mensaje del error</label>
          <input type="text" id="message" class="textarea" name="description" maxlength="50" placeholder="ej: Me marca como 'interaccion fallida' cuando intento usarlo">
          <footer>
            <button data-tooltip="Cierra este formulario" id="close" class="secondary">
                Cancelar
              </button>
            <button data-tooltip="Enviar" id="submit">Enviar</button>
          </footer>
        </article>
      </dialog>

      <div class="message-box">
        <div class="button-error-etc">
            <h1>Haz click en el boton para realizar un reporte</h1>
            <hr>
            <center>
              <button id="report" data-tooltip="Realiza un reporte">Reportar error</button>
              <hr>
              <a data-tooltip="Abandona esta pagina" href="/"><button class="secondary">Volver a inicio</button></a>
            </center>
        </div>
      </div>

      <style>
        .message-box {
            padding: 10px;
            width: 100%;
            height: 95vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .button-error-etc{ 
          width: 500px;
          text-align: center;
        }

        
      </style>

      <script src="../scripts/report-bug.js"></script>


    <Footer></Footer>
</LayoutSimple>